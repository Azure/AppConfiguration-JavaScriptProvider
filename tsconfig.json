{
    "compilerOptions": {
        "lib": [
            "DOM",
            "WebWorker",
            "ESNext",
            "ES2022"
        ],
        "skipDefaultLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2022",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "inlineSources": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}