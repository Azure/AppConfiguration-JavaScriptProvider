{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2022",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "./dist-esm"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}