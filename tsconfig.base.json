{
    "compilerOptions": {
        "lib": [
            "DOM",
            "WebWorker",
            "ESNext"
        ],
        "skipDefaultLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2022",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}